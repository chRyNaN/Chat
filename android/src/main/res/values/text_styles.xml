<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->

    <style name="Regular" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="SemiBold" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Bold" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <!-- Base Extensions -->

    <style name="TextAppearance.Header" parent="Bold">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.SubHeader" parent="Bold">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.Title" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.Button" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.Body" parent="Regular">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.LabelHeader" parent="Bold">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.Label" parent="Regular">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <!-- Body Extensions -->

    <style name="TextAppearance.Body.Subtle">
        <item name="android:textColor">@color/text_primary_subtle_color</item>
    </style>

    <style name="TextAppearance.Body.Secondary">
        <item name="android:textColor">@color/text_secondary_color</item>
    </style>

    <style name="TextAppearance.Body.Secondary.Subtle">
        <item name="android:textColor">@color/text_secondary_subtle_color</item>
    </style>

    <style name="TextAppearance.Body.Accent">
        <item name="android:textColor">@color/text_accent_color</item>
    </style>

    <style name="TextAppearance.Body.Error">
        <item name="android:textColor">@color/text_error_color</item>
