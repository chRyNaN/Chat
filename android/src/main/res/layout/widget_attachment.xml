<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.chrynan.chat.feature.conversation.widget.AttachmentImageView
            android:id="@+id/attachmentImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_horizontal_default"
            android:layout_marginTop="@dimen/spacing_vertical_default"
            android:layout_marginEnd="@dimen/spacing_horizontal_default"
            android:layout_marginBottom="@dimen/spacing_vertical_default"
            android:contentDescription="@string/cd_attachment_image"
            android:elevation="@dimen/attachment_image_elevation"
            android:maxWidth="@dimen/attachment_image_max_size"
            android:maxHeight="@dimen/attachment_image_max_size"
            android:minWidth="@dimen/attachment_image_min_size"
            android:minHeight="@dimen/attachment_image_min_size"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/attachmentBadgeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_attachment_badge"
            android:contentDescription="@string/cd_attachment_badge_remove_item"
            android:elevation="@dimen/attachment_badge_elevation"
            android:src="@drawable/ic_badge_remove"
            app:layout_constraintBottom_toTopOf="@+id/attachmentImageView"
            app:layout_constraintEnd_toEndOf="@+id/attachmentImageView"
            app:layout_constraintStart_toEndOf="@+id/attachmentImageView"
            app:layout_constraintTop_toTopOf="@id/attachmentImageView" />

</merge>