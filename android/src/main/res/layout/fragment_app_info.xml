<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/spacing_horizontal_default"
        android:paddingEnd="@dimen/spacing_horizontal_default">

    <TextView
            android:id="@+id/versionTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_default"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/app_info_version_title"
            android:textAppearance="@style/TextAppearance.Title.Dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/versionDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_vertical_default"
            android:singleLine="false"
            android:textAppearance="@style/TextAppearance.Body.Dark.Secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/versionTitleTextView" />

    <TextView
            android:id="@+id/versionUpdateTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_vertical_default"
            android:layout_marginBottom="@dimen/spacing_vertical_default"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Title.Dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/versionDescriptionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>