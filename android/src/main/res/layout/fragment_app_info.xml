<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include
                android:id="@+id/appStoreIDCell"
                layout="@layout/layout_app_info_cell"/>

        <include
                android:id="@+id/versionCell"
                layout="@layout/layout_app_info_cell"/>

        <include
                android:id="@+id/versionCodeCell"
                layout="@layout/layout_app_info_cell"/>

        <include
                android:id="@+id/versionUpdateCell"
                layout="@layout/layout_app_info_cell"/>

        <include
                android:id="@+id/licenseCell"
                layout="@layout/layout_app_info_cell"/>

        <include
                android:id="@+id/sourceCodeCell"
                layout="@layout/layout_app_info_cell"/>

    </LinearLayout>

</ScrollView>