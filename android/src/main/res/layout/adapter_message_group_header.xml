<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
            android:id="@+id/messageGroupHeaderDividerView"
            android:layout_width="0dp"
            android:layout_height="@dimen/message_group_header_divider_height"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="@color/message_group_header_divider_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/messageGroupHeaderTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_horizontal_default"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_horizontal_default"
            android:drawablePadding="@dimen/spacing_small"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.Title.Subtle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messageGroupHeaderDividerView"
            tools:text="Unread messages" />

</androidx.constraintlayout.widget.ConstraintLayout>