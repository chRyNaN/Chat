<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_xsmall"
    android:paddingBottom="@dimen/spacing_xsmall"
    android:paddingStart="@dimen/spacing_horizontal_default"
    android:paddingEnd="@dimen/spacing_horizontal_default"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/statusImageView"
        android:layout_width="@dimen/message_status_image_size"
        android:layout_height="@dimen/message_status_image_size"
        android:contentDescription="@string/cd_message_status_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Label.Dark.Secondary"
        android:singleLine="true"
        android:maxLines="1"
        android:layout_marginStart="@dimen/spacing_small"
        app:layout_constraintStart_toEndOf="@+id/statusImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Seen"/>

</androidx.constraintlayout.widget.ConstraintLayout>