<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/messageImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/message_item_horizontal_margin"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginEnd="@dimen/spacing_horizontal_default"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:importantForAccessibility="no"
            android:maxWidth="@dimen/message_item_image_max_size"
            android:maxHeight="@dimen/message_item_image_max_size"
            android:minWidth="@dimen/message_item_image_min_size"
            android:minHeight="@dimen/message_item_image_min_size"
            android:padding="@dimen/spacing_xsmall"
            android:src="@drawable/bg_launcher"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>